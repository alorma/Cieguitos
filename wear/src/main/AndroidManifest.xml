<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.tempos21.cieguitos">

    <uses-feature android:name="android.hardware.type.watch"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/notificacion_logo_caixa"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault"
        tools:replace="icon">
        <activity
            android:name="com.tempos21.cieguitos.ui.activity.LaunchActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tempos21.cieguitos.ui.activity.WearMainActivity"
            android:label="@string/app_name"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>
